            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
        
        // Close all dropdowns when closing menu
        document.getElementById('mobileServicesDropdown').classList.add('hidden');
        document.getElementById('mobileMoreDropdown').classList.add('hidden');
        document.getElementById('servicesArrow').classList.remove('rotate-180');
        document.getElementById('moreArrow').classList.remove('rotate-180');
    }
    
    function toggleMobileDropdown(type) {
        const dropdown = document.getElementById('mobile' + type.charAt(0).toUpperCase() + type.slice(1) + 'Dropdown');
        const arrow = document.getElementById(type + 'Arrow');
        
        if (dropdown.classList.contains('hidden')) {
            dropdown.classList.remove('hidden');
            arrow.classList.add('rotate-180');
        } else {
            dropdown.classList.add('hidden');
            arrow.classList.remove('rotate-180');
        }
    }
    
    // Make functions globally available
    window.toggleMobileMenu = toggleMobileMenu;
    window.toggleMobileDropdown = toggleMobileDropdown;
</script>

