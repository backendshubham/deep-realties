<script>
    function resetForm() {
        document.getElementById('successMessage').classList.add('hidden');
        document.getElementById('requirementForm').reset();
        document.getElementById('requirementForm').scrollIntoView({ behavior: 'smooth' });
    }
    
    document.getElementById('requirementForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);
        
        try {
            const response = await fetch('/api/enquiries', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    ...data,
                    enquiry_type: 'buy',
                    property_type: data.property_type,
                    min_budget: parseFloat(data.min_budget),
                    max_budget: parseFloat(data.max_budget),
                    min_area: data.min_area ? parseFloat(data.min_area) : null,
                    max_area: data.max_area ? parseFloat(data.max_area) : null,
                    bedrooms: data.bedrooms ? parseInt(data.bedrooms) : null,
                    bathrooms: data.bathrooms ? parseInt(data.bathrooms) : null
                })
            });
            
            const result = await response.json();
            
            if (response.ok) {
                document.getElementById('requirementForm').style.display = 'none';
                document.getElementById('successMessage').classList.remove('hidden');
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else {
                showError(result.error || 'Failed to submit requirement');
            }
        } catch (error) {
            console.error('Error:', error);
            showError('An error occurred. Please try again.');
        }
    });
