<script>
    function resetForm() {
        document.getElementById('successMessage').classList.add('hidden');
        document.getElementById('buyFormContainer').style.display = 'block';
        document.getElementById('buyForm').reset();
        if (window.togglePropertyFields) {
            window.togglePropertyFields(); // Reset field visibility
        }
        document.getElementById('buyForm').scrollIntoView({ behavior: 'smooth' });
    }
    
    // Make toggle function globally accessible
    window.togglePropertyFields = function() {
        const propertyType = document.querySelector('input[name="property_type"]:checked')?.value;
        const plotFields = document.getElementById('plotFields');
        const farmlandFields = document.getElementById('farmlandFields');
        const otherFields = document.getElementById('otherPropertyFields');
        const regularBudgetFields = document.getElementById('regularBudgetFields');
        const minBudgetInput = document.querySelector('input[name="min_budget"]');
        const maxBudgetInput = document.querySelector('input[name="max_budget"]');
        const minBudgetPerSqftInput = document.querySelector('input[name="min_budget_per_sqft"]');
        const maxBudgetPerSqftInput = document.querySelector('input[name="max_budget_per_sqft"]');
        const minBudgetPerBighaInput = document.querySelector('input[name="min_budget_per_bigha"]');
        const maxBudgetPerBighaInput = document.querySelector('input[name="max_budget_per_bigha"]');
        
        if (!plotFields || !farmlandFields || !otherFields || !regularBudgetFields) {
            return;
        }
        
        if (propertyType === 'plot') {
            plotFields.classList.remove('hidden');
            farmlandFields.classList.add('hidden');
            otherFields.classList.add('hidden');
            regularBudgetFields.classList.add('hidden');
            // Remove required attribute from regular budget fields
            if (minBudgetInput) minBudgetInput.removeAttribute('required');
            if (maxBudgetInput) maxBudgetInput.removeAttribute('required');
            // Add required attribute to per sqft budget fields
            if (minBudgetPerSqftInput) minBudgetPerSqftInput.setAttribute('required', 'required');
            if (maxBudgetPerSqftInput) maxBudgetPerSqftInput.setAttribute('required', 'required');
            // Remove required attribute from per bigha budget fields
            if (minBudgetPerBighaInput) minBudgetPerBighaInput.removeAttribute('required');
            if (maxBudgetPerBighaInput) maxBudgetPerBighaInput.removeAttribute('required');
        } else if (propertyType === 'farmland') {
            plotFields.classList.add('hidden');
            farmlandFields.classList.remove('hidden');
            otherFields.classList.add('hidden');
            regularBudgetFields.classList.add('hidden');
            // Remove required attribute from regular budget fields
            if (minBudgetInput) minBudgetInput.removeAttribute('required');
            if (maxBudgetInput) maxBudgetInput.removeAttribute('required');
            // Remove required attribute from per sqft budget fields
            if (minBudgetPerSqftInput) minBudgetPerSqftInput.removeAttribute('required');
            if (maxBudgetPerSqftInput) maxBudgetPerSqftInput.removeAttribute('required');
            // Add required attribute to per bigha budget fields
            if (minBudgetPerBighaInput) minBudgetPerBighaInput.setAttribute('required', 'required');
            if (maxBudgetPerBighaInput) maxBudgetPerBighaInput.setAttribute('required', 'required');
        } else {
            // Flat or House
            plotFields.classList.add('hidden');
            farmlandFields.classList.add('hidden');
            otherFields.classList.remove('hidden');
            regularBudgetFields.classList.remove('hidden');
            // Add required attribute to regular budget fields
            if (minBudgetInput) minBudgetInput.setAttribute('required', 'required');
            if (maxBudgetInput) maxBudgetInput.setAttribute('required', 'required');
            // Remove required attribute from per sqft budget fields
            if (minBudgetPerSqftInput) minBudgetPerSqftInput.removeAttribute('required');
            if (maxBudgetPerSqftInput) maxBudgetPerSqftInput.removeAttribute('required');
            // Remove required attribute from per bigha budget fields
            if (minBudgetPerBighaInput) minBudgetPerBighaInput.removeAttribute('required');
            if (maxBudgetPerBighaInput) maxBudgetPerBighaInput.removeAttribute('required');
        }
    };
    
    // Add event listeners to property type radio buttons
    document.addEventListener('DOMContentLoaded', function() {
        // Use event delegation on the form to catch all radio button changes
        const buyForm = document.getElementById('buyForm');
        if (buyForm) {
            buyForm.addEventListener('change', function(e) {
                if (e.target.name === 'property_type' && e.target.type === 'radio') {
                    window.togglePropertyFields();
                }
            });
            
            buyForm.addEventListener('click', function(e) {
                if (e.target.name === 'property_type' && e.target.type === 'radio') {
                    setTimeout(window.togglePropertyFields, 10);
                }
            });
        }
        
        // Also add direct listeners to radio buttons
        const propertyTypeRadios = document.querySelectorAll('input[name="property_type"]');
        propertyTypeRadios.forEach(radio => {
            radio.addEventListener('change', window.togglePropertyFields);
        });
        
        // Initialize on page load
        setTimeout(function() {
            window.togglePropertyFields();
        }, 100);
        
        // Form submission handler (reuse buyForm from above)
        if (buyForm) {
            buyForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                
                // Validate required fields based on property type
                const propertyType = formData.get('property_type');
                if (propertyType === 'plot') {
                    // For plot: require per sqft budget fields
                    if (!formData.get('min_budget_per_sqft') || !formData.get('max_budget_per_sqft')) {
                        if (typeof window.showError === 'function') {
                            window.showError('Please provide both minimum and maximum budget per square foot for plot.');
                        } else {
                            alert('Please provide both minimum and maximum budget per square foot for plot.');
                        }
                        return;
                    }
                } else if (propertyType === 'farmland') {
                    // For farmland: require per bigha budget fields and at least one of bigha/acre
                    if (!formData.get('min_budget_per_bigha') || !formData.get('max_budget_per_bigha')) {
                        if (typeof window.showError === 'function') {
                            window.showError('Please provide both minimum and maximum budget per bigha for farm land.');
                        } else {
                            alert('Please provide both minimum and maximum budget per bigha for farm land.');
                        }
                        return;
                    }
                    // At least one of bigha or acre must be provided
                    if (!formData.get('farmland_bigha') && !formData.get('farmland_acre')) {
                        if (typeof window.showError === 'function') {
                            window.showError('Please provide either Bigha or Acre for farm land.');
                        } else {
                            alert('Please provide either Bigha or Acre for farm land.');
                        }
                        return;
                    }
