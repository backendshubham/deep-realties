<%- include('../../layouts/main', { content: `
<div class="min-h-screen py-8 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-display font-bold text-gray-900 dark:text-white mb-2">Contact Submissions</h1>
                    <p class="text-gray-600 dark:text-gray-400">View and manage contact form submissions</p>
                </div>
                <a href="/admin/dashboard" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-white rounded-lg transition-colors">
                    ‚Üê Back to Dashboard
                </a>
            </div>
        </div>
        
        <!-- Filters -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-6">
            <div class="flex flex-wrap gap-4">
                <select id="readFilter" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                    <option value="">All Submissions</option>
                    <option value="false">Unread</option>
                    <option value="true">Read</option>
                </select>
                <button onclick="loadSubmissions()" class="px-6 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
                    Filter
                </button>
            </div>
        </div>
        
        <!-- Submissions List -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700">
            <div id="submissionsList" class="p-6">
                <div class="inline-loader"><div class="inline-loader-spinner"></div><p class="inline-loader-text">Loading submissions...</p></div>
            </div>
        </div>
    </div>
</div>

<script>
    async function loadSubmissions() {
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
            return;
        }
        
        const container = document.getElementById('submissionsList');
        container.innerHTML = '<div class="inline-loader"><div class="inline-loader-spinner"></div><p class="inline-loader-text">Loading submissions...</p></div>';
        
        const isRead = document.getElementById('readFilter').value;
        let url = '/api/admin/contact-submissions';
        if (isRead) url += '?is_read=' + encodeURIComponent(isRead);
        
        try {
            console.log('Fetching contact submissions from:', url);
            const response = await fetch(url, {
                headers: { 'Authorization': 'Bearer ' + token }
            });
            
            console.log('Response status:', response.status);
            
            if (response.status === 403) {
                showConfirm('Access Denied', 'Admin access required. Redirecting to dashboard...', function() {
                    window.location.href = '/dashboard';
                });
                return;
            }
            
            if (!response.ok) {
                const errorData = await response.json().catch(() => ({ error: 'Failed to load submissions' }));
                throw new Error(errorData.error || 'Failed to load submissions');
            }
            
            const data = await response.json();
            console.log('Submissions data:', data);
            console.log('Submissions array:', data.submissions);
            console.log('Is array?', Array.isArray(data.submissions));
            console.log('Length:', data.submissions ? data.submissions.length : 0);
            
            const container = document.getElementById('submissionsList');
            
            if (!data) {
                container.innerHTML = '<div class="text-center py-8"><p class="text-red-600 dark:text-red-400 mb-2">No data received from API</p></div>';
                return;
            }
            
            // Handle case where API might return submissions directly or in a submissions property
            const submissionsArray = data.submissions || (Array.isArray(data) ? data : []);
            
            if (submissionsArray && Array.isArray(submissionsArray) && submissionsArray.length > 0) {
                console.log('Found', submissionsArray.length, 'submissions to display');
                try {
                    const submissionCards = submissionsArray.map(function(s) {
                        const readClass = s.is_read ? 'bg-gray-50 dark:bg-gray-700/50' : 'bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-500';
                        const dateStr = s.created_at ? new Date(s.created_at).toLocaleString() : 'Unknown date';
                        const phoneStr = s.phone ? ' | Phone: ' + s.phone : '';
                        return '<div class="' + readClass + ' rounded-lg p-6 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow"><div class="flex justify-between items-start mb-4"><div class="flex-1"><h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">' + (s.subject || 'No Subject') + '</h3><p class="text-sm text-gray-600 dark:text-gray-400">From: <span class="font-medium">' + (s.name || s.full_name || 'Anonymous') + '</span> (' + (s.email || 'No email') + ')' + phoneStr + '</p></div><div class="text-right"><span class="text-xs text-gray-500 dark:text-gray-400 block">' + dateStr + '</span>' + (!s.is_read ? '<span class="inline-block mt-1 px-2 py-1 text-xs font-semibold bg-blue-500 text-white rounded-full">New</span>' : '') + '</div></div><p class="text-gray-700 dark:text-gray-300 mb-4 whitespace-pre-wrap">' + (s.message || 'No message provided') + '</p><div class="flex gap-2 flex-wrap">' + (!s.is_read ? '<button data-submission-id="' + s.id + '" class="mark-read-btn px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm transition-colors">Mark as Read</button>' : '<span class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-lg text-sm">Already Read</span>') + '<button data-submission-id="' + s.id + '" class="delete-submission-btn px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition-colors">Delete</button></div></div>';
                    });
                    
                    container.innerHTML = '<div class="space-y-4">' + submissionCards.join('') + '</div>';
                    console.log('Submissions rendered successfully');
                    
                    // Attach event listeners using event delegation
                    attachContactEventListeners();
                } catch (renderError) {
                    console.error('Error rendering submissions:', renderError);
                    container.innerHTML = '<div class="text-center py-8"><p class="text-red-600 dark:text-red-400 mb-2">Error rendering submissions</p><p class="text-sm text-gray-600 dark:text-gray-400">' + renderError.message + '</p></div>';
                }
            } else {
                console.log('No submissions found or empty array');
                console.log('Data structure:', JSON.stringify(data, null, 2));
                console.log('Submissions array:', submissionsArray);
                const message = submissionsArray && Array.isArray(submissionsArray) && submissionsArray.length === 0 
                    ? 'No contact submissions found. All submissions will appear here.' 
                    : 'No submissions data available. Check console for API response details.';
                container.innerHTML = '<div class="text-center py-12"><svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg><p class="mt-4 text-gray-600 dark:text-gray-400">' + message + '</p><p class="mt-2 text-sm text-gray-500 dark:text-gray-500">Check browser console (F12) for more details</p></div>';
            }
        } catch (error) {
            console.error('Error loading submissions:', error);
            const container = document.getElementById('submissionsList');
            container.innerHTML = '<div class="text-center py-8"><p class="text-red-600 dark:text-red-400 mb-2">Error loading submissions</p><p class="text-sm text-gray-600 dark:text-gray-400">' + (error.message || 'Please try again later') + '</p></div>';
        }
    }
    
    function attachContactEventListeners() {
        const container = document.getElementById('submissionsList');
        if (!container) return;
        
        container.addEventListener('click', function(e) {
            const target = e.target.closest('button');
            if (!target) return;
            
            const submissionId = target.getAttribute('data-submission-id');
            if (!submissionId) return;
            
            if (target.classList.contains('mark-read-btn')) {
                markAsRead(submissionId);
            } else if (target.classList.contains('delete-submission-btn')) {
                deleteSubmission(submissionId);
            }
        });
    }
    
    async function markAsRead(id) {
        const token = localStorage.getItem('token');
        
        const container = document.getElementById('submissionsList');
        const originalContent = container.innerHTML;
        
        try {
            const response = await fetch('/api/contact/submissions/' + id + '/read', {
                method: 'PUT',
                headers: { 'Authorization': 'Bearer ' + token }
            });
            
            const result = await response.json();
            
            if (response.ok) {
                container.innerHTML = '<div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg mb-4">Marked as read successfully!</div>';
                setTimeout(loadSubmissions, 500);
            } else {
                showError(result.error || 'Failed to mark as read');
            }
        } catch (error) {
            console.error('Error marking as read:', error);
            showError('Error updating submission. Please try again.');
        }
    }
    
    async function deleteSubmission(id) {
        const token = localStorage.getItem('token');
        showConfirm('Confirm Deletion', 'Are you sure you want to delete this submission? This action cannot be undone.', function() {
            performDeleteSubmission(id);
        });
    }
    
    async function performDeleteSubmission(id) {
        const token = localStorage.getItem('token');
        
        const container = document.getElementById('submissionsList');
        const originalContent = container.innerHTML;
        
        try {
            const response = await fetch('/api/admin/contact-submissions/' + id, {
                method: 'DELETE',
                headers: { 'Authorization': 'Bearer ' + token }
            });
            
            const result = await response.json();
            
            if (response.ok) {
                container.innerHTML = '<div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg mb-4">Submission deleted successfully!</div>';
                setTimeout(loadSubmissions, 500);
            } else {
                showError(result.error || 'Failed to delete submission');
            }
        } catch (error) {
            console.error('Error deleting submission:', error);
            showError('Error deleting submission. Please try again.');
        }
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        loadSubmissions();
    });
</script>
` }) %>

