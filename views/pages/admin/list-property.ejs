                const width = parseFloat(String(formData.get('plot_width')).replace(/,/g, '').trim()) || 0;
                if (length > 0 && width > 0) {
                    data.area_sqft = length * width;
                } else {
                    // Fallback to area_sqft if provided
                    const areaSqft = formData.get('area_sqft');
                    if (areaSqft && areaSqft.trim() !== '') {
                        data.area_sqft = parseFloat(String(areaSqft).replace(/,/g, '').trim());
                    } else {
                        if (typeof window.showError === 'function') {
                            window.showError('Please provide either Total Area or Length & Width for the plot.');
                        } else {
                            alert('Please provide either Total Area or Length & Width for the plot.');
                        }
