        const plotLengthInput = document.getElementById('plot_length');
        const plotWidthInput = document.getElementById('plot_width');
        const plotTotalAreaInput = document.getElementById('plot_total_area');
        
        if (plotLengthInput) {
            plotLengthInput.addEventListener('input', calculatePlotArea);
            plotLengthInput.addEventListener('blur', calculatePlotArea);
        }
        if (plotWidthInput) {
            plotWidthInput.addEventListener('input', calculatePlotArea);
            plotWidthInput.addEventListener('blur', calculatePlotArea);
        }
        
        // Track manual edits to total area field
        if (plotTotalAreaInput) {
            plotTotalAreaInput.addEventListener('focus', function() {
                // When user focuses on the field, mark that they might edit it manually
                this.dataset.wasFocused = 'true';
            });
            
            plotTotalAreaInput.addEventListener('input', function() {
                // If user types in the field, mark it as manually edited
                if (this.dataset.wasFocused === 'true') {
                    this.dataset.manualEdit = 'true';
                }
            });
            
            plotTotalAreaInput.addEventListener('blur', function() {
                // Reset focus flag
                this.dataset.wasFocused = 'false';
            });
        }
        
        // Load user info on page load
        loadUserInfo();
    });
    
