    // Function to calculate plot total area from length and width
    function calculatePlotArea() {
        const lengthInput = document.getElementById('plot_length');
        const widthInput = document.getElementById('plot_width');
        const totalAreaInput = document.getElementById('plot_total_area');
        
        if (lengthInput && widthInput && totalAreaInput) {
            const length = parseFloat(lengthInput.value) || 0;
            const width = parseFloat(widthInput.value) || 0;
            
            // Only calculate if both length and width have valid values
            if (length > 0 && width > 0) {
                const totalArea = length * width;
                
                // Check if user manually edited the total area (has a flag set)
                const wasManuallyEdited = totalAreaInput.dataset.manualEdit === 'true';
                
                if (!wasManuallyEdited) {
                    // Auto-calculate and update the field
                    totalAreaInput.value = totalArea.toFixed(2);
                } else {
                    // If manually edited, check if length/width changed significantly
                    // If so, suggest recalculating by clearing the manual edit flag
                    const previousLength = parseFloat(lengthInput.dataset.lastLength || 0);
                    const previousWidth = parseFloat(widthInput.dataset.lastWidth || 0);
                    
                    // If length or width changed, allow auto-calculation again
                    if (Math.abs(length - previousLength) > 0.01 || Math.abs(width - previousWidth) > 0.01) {
                        totalAreaInput.value = totalArea.toFixed(2);
                        totalAreaInput.dataset.manualEdit = 'false';
                    }
                }
                
                // Store current values for next calculation check
                lengthInput.dataset.lastLength = length;
                widthInput.dataset.lastWidth = width;
            } else if (length === 0 || width === 0) {
                // If either field is cleared, clear the total area if it was auto-calculated
                if (totalAreaInput.dataset.manualEdit !== 'true') {
                    totalAreaInput.value = '';
                }
            }
        }
    }
    
