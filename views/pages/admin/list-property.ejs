        });
    }
    
    function removeImage(index) {
        selectedFiles.splice(index, 1);
        updateImagePreviews();
        updateFileInput();
    }
    
    function updateFileInput() {
        if (!imageInput) return;
        const dataTransfer = new DataTransfer();
        selectedFiles.forEach(file => {
            try {
                dataTransfer.items.add(file);
            } catch (e) {
                console.error('Error adding file to DataTransfer:', e);
            }
        });
        imageInput.files = dataTransfer.files;
        
        // Trigger change event to ensure form validation recognizes the files
        const changeEvent = new Event('change', { bubbles: true });
        imageInput.dispatchEvent(changeEvent);
    }
    
    function validateAndAddFiles(files) {
        const fileArray = Array.from(files);
        const maxSize = 5 * 1024 * 1024; // 5MB
        const validFiles = [];
        const errors = [];
        
        // Check total count
        if (selectedFiles.length + fileArray.length > 5) {
            const errorMsg = 'Maximum 5 images allowed. You can only add ' + (5 - selectedFiles.length) + ' more image(s).';
            if (typeof window.showError === 'function') {
                window.showError(errorMsg);
            } else {
                alert(errorMsg);
            }
            return;
        }
        
        fileArray.forEach(file => {
            // Check file type
            if (!file.type.startsWith('image/')) {
                errors.push(file.name + ' is not an image file.');
                return;
            }
            
            // Check file size
            if (file.size > maxSize) {
                errors.push(file.name + ' exceeds 5MB size limit.');
                return;
            }
            
            validFiles.push(file);
        });
        
        if (errors.length > 0) {
            const errorMsg = errors.join(' ');
            if (typeof window.showError === 'function') {
                window.showError(errorMsg);
            } else {
                alert(errorMsg);
            }
        }
        
        if (validFiles.length > 0) {
            selectedFiles = selectedFiles.concat(validFiles);
            updateImagePreviews();
            updateFileInput();
        }
    }
    
    if (imageInput && dropZone) {
        // File input change
