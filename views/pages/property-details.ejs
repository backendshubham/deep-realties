<%- include('../layouts/main', { content: `
<div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div id="propertyDetails" class="bg-white dark:bg-gray-700 rounded-lg shadow-md p-6">
            <p class="text-center text-gray-600 dark:text-gray-400">Loading property details...</p>
        </div>
    </div>
</div>

<script>
    async function loadPropertyDetails() {
        // Get propertyId from URL path
        const pathParts = window.location.pathname.split('/');
        const propertyId = pathParts[pathParts.length - 1];
        
        const container = document.getElementById('propertyDetails');
        const response = await fetch('/api/properties/' + propertyId);
        const data = await response.json();
        
        if (data.property) {
            const p = data.property;
            const mainImage = (p.images && p.images[0]) ? p.images[0] : '/images/placeholder.jpg';
            const imageGallery = (p.images || []).slice(0, 4).map(function(img) {
                return '<img src="' + img + '" alt="' + p.title + '" class="w-full h-20 object-cover rounded">';
            }).join('');
            const bedroomsHtml = p.bedrooms ? '<div class="p-4 bg-gray-50 dark:bg-gray-600 rounded"><p class="text-sm text-gray-600 dark:text-gray-400">Bedrooms</p><p class="font-semibold">' + p.bedrooms + '</p></div>' : '';
            const bathroomsHtml = p.bathrooms ? '<div class="p-4 bg-gray-50 dark:bg-gray-600 rounded"><p class="text-sm text-gray-600 dark:text-gray-400">Bathrooms</p><p class="font-semibold">' + p.bathrooms + '</p></div>' : '';
            const description = p.description || 'No description available';
            
            container.innerHTML = 
                '<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">' +
                    '<div>' +
                        '<img src="' + mainImage + '" alt="' + p.title + '" class="w-full rounded-lg mb-4">' +
                        '<div class="grid grid-cols-4 gap-2">' +
                            imageGallery +
                        '</div>' +
                    '</div>' +
                    '<div>' +
                        '<h1 class="text-3xl font-display font-bold mb-4">' + p.title + '</h1>' +
                        '<p class="text-xl text-emerald-600 dark:text-emerald-400 font-bold mb-4">' +
                            'â‚¹' + p.price.toLocaleString() +
                        '</p>' +
                        '<div class="grid grid-cols-2 gap-4 mb-6">' +
                            '<div class="p-4 bg-gray-50 dark:bg-gray-600 rounded">' +
                                '<p class="text-sm text-gray-600 dark:text-gray-400">Area</p>' +
                                '<p class="font-semibold">' + p.area_sqft + ' sqft</p>' +
                            '</div>' +
                            '<div class="p-4 bg-gray-50 dark:bg-gray-600 rounded">' +
                                '<p class="text-sm text-gray-600 dark:text-gray-400">Type</p>' +
                                '<p class="font-semibold">' + p.property_type + '</p>' +
                            '</div>' +
                            bedroomsHtml +
                            bathroomsHtml +
                        '</div>' +
                        '<p class="text-gray-700 dark:text-gray-300 mb-4">' +
                            '<strong>Location:</strong> ' + p.locality + ', ' + p.city + ', ' + p.state +
                        '</p>' +
                        '<p class="text-gray-700 dark:text-gray-300 mb-6">' + description + '</p>' +
                        '<button onclick="showEnquiryForm()" class="w-full px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold transition-colors">' +
                            'Enquire Now' +
                        '</button>' +
                    '</div>' +
                '</div>';
        } else {
            container.innerHTML = '<p class="text-center text-red-600">Property not found</p>';
        }
    }
    
    function showEnquiryForm() {
        // Check if user is logged in
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
            return;
        }
        
        // Show enquiry form modal
        showInfo('Enquiry form will be implemented soon');
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        loadPropertyDetails();
    });
</script>
` }) %>

