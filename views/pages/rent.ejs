<%- include('../layouts/main', { content: `
<div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-display font-bold mb-8">Properties for Rent</h1>
        
        <div id="rentalsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Rentals will be loaded here -->
        </div>
    </div>
</div>

<script>
    async function loadRentals() {
        const response = await fetch('/api/rentals');
        const data = await response.json();
        
        const grid = document.getElementById('rentalsGrid');
        if (data.rentals && data.rentals.length > 0) {
            grid.innerHTML = data.rentals.map(function(rental) {
                const rentalImage = (rental.images && rental.images[0]) ? rental.images[0] : '/images/placeholder.jpg';
                return '<div class="bg-white dark:bg-gray-700 rounded-lg shadow-md overflow-hidden">' +
                    '<img src="' + rentalImage + '" alt="' + rental.title + '" class="w-full h-48 object-cover">' +
                    '<div class="p-4">' +
                        '<h3 class="text-xl font-semibold mb-2">' + rental.title + '</h3>' +
                        '<p class="text-gray-600 dark:text-gray-400 mb-2">' + rental.locality + ', ' + rental.city + '</p>' +
                        '<p class="text-2xl font-bold text-emerald-600">â‚¹' + rental.monthly_rent.toLocaleString() + '/month</p>' +
                        '<a href="/rentals/' + rental.id + '" class="block mt-4 text-center px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg">' +
                            'View Details' +
                        '</a>' +
                    '</div>' +
                '</div>';
            }).join('');
        } else {
            grid.innerHTML = '<p class="col-span-full text-center">No rentals available</p>';
        }
    }
    
    document.addEventListener('DOMContentLoaded', loadRentals);
</script>
` }) %>

