            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
    };
    
    window.closeInvestorForm = function() {
        const modal = document.getElementById('investorModal');
        if (modal) {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }
    };
    
    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            window.closeInvestorForm();
        }
    });
    
    // Handle form submission when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('investorForm');
        if (form) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                
                // Build the message from form data
                let message = 'Investor Registration:' + String.fromCharCode(10) + String.fromCharCode(10);
                message += 'Full Name: ' + formData.get('full_name') + String.fromCharCode(10);
                message += 'Email: ' + formData.get('email') + String.fromCharCode(10);
                message += 'Phone: ' + formData.get('phone') + String.fromCharCode(10);
                
                if (formData.get('investment_budget')) {
                    message += 'Investment Budget: ₹' + parseInt(formData.get('investment_budget')).toLocaleString() + String.fromCharCode(10);
                }
                if (formData.get('investment_type')) {
                    message += 'Preferred Investment Type: ' + formData.get('investment_type') + String.fromCharCode(10);
                }
                if (formData.get('message')) {
                    message += String.fromCharCode(10) + 'Message:' + String.fromCharCode(10) + formData.get('message');
                }
                
                const data = {
                    full_name: formData.get('full_name'),
                    email: formData.get('email'),
                    phone: formData.get('phone'),
                    subject: 'Investor Registration - ' + (formData.get('investment_type') || 'General'),
                    message: message
                };
                
                try {
                    const response = await fetch('/api/contact', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (response.ok) {
                        if (typeof window.showSuccess === 'function') {
                            window.showSuccess('Registration submitted successfully! Our team will contact you soon.');
                        } else {
                            alert('Registration submitted successfully! Our team will contact you soon.');
                        }
                        window.closeInvestorForm();
                        form.reset();
                    } else {
                        if (typeof window.showError === 'function') {
                            window.showError(result.error || 'Failed to submit registration');
                        } else {
                            alert(result.error || 'Failed to submit registration');
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                    if (typeof window.showError === 'function') {
                        window.showError('An error occurred. Please try again.');
        } else {
                        alert('An error occurred. Please try again.');
