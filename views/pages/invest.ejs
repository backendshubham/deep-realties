<%- include('../layouts/main', { content: `
<div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-display font-bold mb-8">Investment Opportunities</h1>
        
        <div id="opportunitiesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Opportunities will be loaded here -->
        </div>
    </div>
</div>

<script>
    async function loadOpportunities() {
        const response = await fetch('/api/investments');
        const data = await response.json();
        
        const grid = document.getElementById('opportunitiesGrid');
        if (data.opportunities && data.opportunities.length > 0) {
            grid.innerHTML = data.opportunities.map(function(opp) {
                const oppImage = (opp.images && opp.images[0]) ? opp.images[0] : '/images/placeholder.jpg';
                return '<div class="bg-white dark:bg-gray-700 rounded-lg shadow-md overflow-hidden">' +
                    '<img src="' + oppImage + '" alt="' + opp.title + '" class="w-full h-48 object-cover">' +
                    '<div class="p-4">' +
                        '<h3 class="text-xl font-semibold mb-2">' + opp.title + '</h3>' +
                        '<p class="text-gray-600 dark:text-gray-400 mb-2">' + opp.location + ', ' + opp.city + '</p>' +
                        '<p class="text-lg font-bold text-emerald-600">Min: â‚¹' + opp.min_investment.toLocaleString() + '</p>' +
                        '<p class="text-sm text-gray-500 mb-4">' + opp.investment_type + '</p>' +
                        '<a href="/invest/' + opp.id + '" class="block text-center px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg">' +
                            'View Details' +
                        '</a>' +
                    '</div>' +
                '</div>';
            }).join('');
        } else {
            grid.innerHTML = '<p class="col-span-full text-center">No investment opportunities available</p>';
        }
    }
    
    document.addEventListener('DOMContentLoaded', loadOpportunities);
</script>
` }) %>

